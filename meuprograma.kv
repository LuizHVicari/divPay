<Gerenciador>:
    Screen:
        Button:
            on_press: root.current = 'home'

        MDBoxLayout:
            Image:
                source:'assets/bk.png'
                size: self.size

        MDFloatLayout:
            
            Image:
                source:'assets/icon.png'
            MDLabel:
                halign: 'center'
                pos_hint: {'center_x': 0.5,'center_y': 0.4}
                text: "Clique para iniciar"
                color: 1,1,1,1


    AddConta:
        name: 'addConta'

    # NumMembros:
    #     name: 'numMembros'

    Home:
        name: 'home'


########################################################################################
#componentes
<Content>:
    inputNome:text_editarMembro
    inputPart:text_editarPart
    inputContr:text_editarContr
    
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: text_editarMembro
        text:root.inputNomeIni
        hint_text: "Membro"

    MDTextField:
        id: text_editarPart
        text:root.inputPartIni
        hint_text: "Participação"
    
    MDTextField:
        id: text_editarContr
        text:root.inputContrIni
        hint_text: "Contribuição"







########################################################################################
#Screens
<Home>:
    orientation: 'vertical'
    ScrollView:
        MDList:
            size_hint: [1,1]
            id: contas
    Button:
        on_press:
            
            root.manager.current = 'addConta'
        text: 'Adicionar Conta'
        id: but_3
        size_hint: [1,0.1]
        height: '32dp'
        background_color: [0,0,1,1]
        





<AddConta>:
    BoxLayout:
        inputNomeBill: txt_1.text
        #listaValores: spinner_1.values
        #valorInicial: spinner_1.text
        size_hint: 1, 1
        halign: 'center'
        orientation: 'vertical'
        
        Label:
            text: 'Adicionar Conta'
            font_size: '40sp'
            bold: True
            color: [0,0,1,1]
            height: '32dp'
            size_hint: (1,0.15)

            
        # Button:
        #     on_press: root.atualiza_spinner()
        #     text: 'Pressione aqui para alterar os valores do Spinner'
        #     id: but_2
        #     size_hint: [0.5,None]
        #     pos_hint: {'x' : .25}
        #     height: '32dp'
            
        GridLayout:
            cols: 1
            spacing: 20
            padding: [20,0]
            
            
            TextInput:
                id: txt_1
                text: root.inputNomeBill
                size_hint: [0.5,None]
                height: '32dp'
            
            Button:
                on_press: root.show_date_picker()
                text: 'Data'
                id: but_1
                size_hint: [1,None]
                height: '32dp'
                background_color: [0,0,1,1]

            # Spinner:
            #     id: spinner_1
            #     text: root.valorInicial
            #     values: root.listaValores
            #     size_hint: [0.5,None]
            #     height: '32dp'
            #     on_text: root.inputNomeBill = self.text
            


            ScrollView:
                size_hint: 1, 0.85
                MDList:
                    id: container


            Button:
                text: "Adicionar Membro"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: [1,None]
                height: '32dp'
                background_color: [1,1,1,1]
                text_color: [0,0,0,1]
                on_release: 
                    root.show_dialog()
                    root.manager.current = 'addConta'
            
            GridLayout:
                cols: 2
                spacing: 20
                

                Button:
                    on_press: 
                        root.print_txt(root.ids.txt_1.text)
                        root.manager.current = 'home'
                    text: 'Adicionar'
                    id: but_1
                    size_hint: [1,None]
                    height: '32dp'
                    background_color: [0,1,1,1]
                    text_color: [1,1,1,1]
                    

                Button:
                    on_press:
                        root.on_return()
                        root.manager.current = 'home'
                    text: 'Cancelar'
                    id: but_2
                    size_hint: [1,None]
                    height: '32dp'
                    background_color: [1,0,0,1]

