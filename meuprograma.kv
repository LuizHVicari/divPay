<Gerenciador>:
    Screen:
        Button:
            on_press: root.current = 'home'

        MDBoxLayout:
            Image:
                source:'assets/bk.png'
                size: self.size

        MDFloatLayout:
            
            Image:
                source:'assets/icon.png'
            MDLabel:
                halign: 'center'
                pos_hint: {'center_x': 0.5,'center_y': 0.4}
                text: "Clique para iniciar"
                color: 1,1,1,1


    AddConta:
        name: 'addConta'

    # NumMembros:
    #     name: 'numMembros'

    Home:
        name: 'home'

    Sugestao:
        name: 'sugestao'


########################################################################################
#componentes






<Content>:
    inputNome:text_editarMembro
    inputPart:text_editarPart
    inputContr:text_editarContr
    
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: text_editarMembro
        text:""
        hint_text: "Membro"




    MDTextField:
        id: text_editarPart
        text:""
        hint_text: "Participação"



    MDTextField:
        id: text_editarContr
        text:""
        hint_text: "Contribuição"









########################################################################################
#Screens
<Home>:
    BoxLayout:
        orientation: 'vertical'
        halign:"center"
        spacing: 10
        padding: ('20dp', '20dp', '20dp', '20dp')

        Label:
            text: 'Suas Contas'
            font_family: "Roboto"
            font_size: '40sp'
            bold: True
            color: [0,0,1,1]
            height: '32dp'
            size_hint: (1,None)
            
        ScrollView:
            MDList:
                size_hint: [1,1]
                id: contas
                
        Button:
            on_press:
                root.clear()
                root.manager.current = 'addConta'
            text: 'Adicionar Conta'
            id: but_3
            size_hint: [1,0.1]
            height: '32dp'
            background_color: [0,0,1,1]
            
            
        





<AddConta>:

    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            title: "Adicionar Conta"
        
        BoxLayout:
            inputNomeBill: txt_1.text
            orientation: 'vertical'
            halign: "center"
            spacing: 20
            padding: ('20dp', '20dp', '20dp', '20dp')
            
            
            
            TextInput:
                id: txt_1
                text: root.inputNomeBill
                size_hint: [1,None]
                height: '32dp'
            
            Button:
                on_press: root.show_date_picker()
                text: 'Data'
                id: but_1
                size_hint: [1,None]
                height: '32dp'
                background_color: [0,0,1,1]

            ScrollView:
                size_hint: 1, 1
                MDList:
                    id: container



            
            BoxLayout:

                height: '80dp'
                size_hint: [1,None]

                orientation: 'vertical'
                halign: "center"

                

                Button:
                    text: "Adicionar Membro"
                    size_hint: [1,None]
                    height: '32dp'
                    background_color: [1,1,1,1]
                    text_color: [0,0,0,1]
                    on_release: 
                        root.show_dialog()
                        root.manager.current = 'addConta'

                BoxLayout:
                    halign: "center"
                    orientation: 'horizontal'
                    spacing: 20
                    

                    Button:
                        on_press: 
                            root.print_txt(root.ids.txt_1.text)
                            
                        text: 'Adicionar'
                        id: but_1
                        size_hint: [1,None]
                        height: '32dp'
                        background_color: [0,1,1,1]
                        text_color: [1,1,1,1]
                        

                    Button:
                        on_press:
                            root.on_return()
                            root.manager.current = 'home'
                        text: 'Cancelar'
                        id: but_2
                        size_hint: [1,None]
                        height: '32dp'
                        background_color: [1,0,0,1]



<Sugestao>:
    BoxLayout:
        orientation: 'vertical'
        halign:"center"
        spacing: 10
        padding: ('20dp', '20dp', '20dp', '20dp')
        
        Label:
            id: ContaSug
            font_family: "Roboto"
            font_size: '40sp'
            bold: True
            color: [0,0,1,1]
            height: '32dp'
            size_hint: (1,None)

        Label:
            text: 'Sugestão de pagamento'
            font_family: "Roboto"
            font_size: '20sp'
            bold: True
            color: [0,0,1,1]
            height: '32dp'
            size_hint: (1,None)
            
            

        ScrollView:
            size_hint: 1, 1
            MDList:
                id: sugestaoList

        Button:
            on_press:
                root.on_return_sugestion()
                root.manager.current = 'home'
            text: 'Voltar'
            id: but_return
            size_hint: [1,None]
            height: '32dp'
            background_color: [0,0,1,1]

